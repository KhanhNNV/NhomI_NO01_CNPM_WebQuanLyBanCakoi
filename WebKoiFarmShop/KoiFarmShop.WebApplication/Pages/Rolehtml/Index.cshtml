<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Roles</h4>
<div class="card">
    <h5 class="card-header"><button type="button" class="btn btn-dark"><a asp-page="Create" style="color:white">Create New</a></button></h5>
    
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Role[0].RoleId)</th>
                    <th>@Html.DisplayNameFor(model => model.Role[0].RoleName)</th>
               
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model.Role)
                {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Html.DisplayFor(modelItem => item.RoleId)</strong></td>
                        <td> @Html.DisplayFor(modelItem => item.RoleName)</td>
                        <td>
                            <button type="button" class="btn btn-info"><a asp-page="./Edit" asp-route-id="@item.RoleId" style="color:white">Edit</a> </button>
                            <button type="button" class="btn btn-info"> <a asp-page="./Details" asp-route-id="@item.RoleId" style="color:white">Details</a> </button>
                            <button type="button" class="btn btn-danger"><a asp-page="./Delete" asp-route-id="@item.RoleId" style="color:white">Delete</a></button>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Delete Koicategory</h4>
    <div class="card mb-4">
<h5 class="card-header"><strong>Are you sure you want to delete this?</strong></h5>
<div class="card-body">
    <div class="mb-3 row">
        <label for="html5-text-input" class="col-md-2 col-form-label">@Html.DisplayNameFor(model => model.KoiCategory.Title)</label>
        <div class="col-md-10">
            <p class="form-control" style="margin-bottom:0px">@Html.DisplayFor(model => model.KoiCategory.Title)</p>
        </div>
    </div>
    <div class="mb-3 row">
        <label for="html5-text-input" class="col-md-2 col-form-label"> @Html.DisplayNameFor(model => model.KoiCategory.Description)</label>
        <div class="col-md-10">
            <p class="form-control" style="margin-bottom:0px">@Html.DisplayFor(model => model.KoiCategory.Description)</p>
        </div>
    </div>
    <div class="mb-3 row">
        <label for="html5-text-input" class="col-md-2 col-form-label"> @Html.DisplayNameFor(model => model.KoiCategory.Cate)</label>
        <div class="col-md-10">
            <p class="form-control" style="margin-bottom:0px">@Html.DisplayFor(model => model.KoiCategory.Cate.CategoryId)</p>
        </div>
    </div>
    
    <div class="mb-3 row">
        <form method="post">
            <input type="hidden" asp-for="KoiCategory.KoiCateId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <button type="button" class="btn btn-secondary"> <a asp-page="./Index" style="color:white">Back to List</a></button>

        </form>
    </div>
</div>
</div>

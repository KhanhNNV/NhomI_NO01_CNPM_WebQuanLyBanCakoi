@page
@model KoiFarmShop.WebApplication.Pages.Koihtml.DetailsModel
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Details</h4>
<div class="card mb-4">
    <h5 class="card-header"><strong>Koi</strong></h5>
    <div class="card-body">
        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">@Html.DisplayNameFor(model => model.Koi.Title)</label>
            <div class="col-md-10">
                <p class="form-control" style="margin-bottom:0px">@Html.DisplayFor(model => model.Koi.Title)</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">@Html.DisplayNameFor(model => model.Koi.Description)</label>
            <div class="col-md-10">
                <p class="form-control" style="margin-bottom:0px">@Html.DisplayFor(model => model.Koi.Description)</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">@Html.DisplayNameFor(model => model.Koi.Price)</label>
            <div class="col-md-10">
                <p class="form-control" style="margin-bottom:0px">@Html.DisplayFor(model => model.Koi.Price)</p>
            </div>
        </div>

        

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">@Html.DisplayNameFor(model => model.Koi.Image)</label>
            <div class="col-md-10">
                <p class="form-control" style="margin-bottom:0px">@Html.DisplayFor(model => model.Koi.Image)</p>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">@Html.DisplayNameFor(model => model.Koi.KoiCate.KoiCateId)</label>
            <div class="col-md-10">
                <p class="form-control" style="margin-bottom:0px">@Html.DisplayFor(model => model.Koi.KoiCate.KoiCateId)</p>
            </div>
        </div>

        <div class="mb-3">
            <button type="button" class="btn btn-primary">
                <a asp-page="./Edit" asp-route-id="@Model.Koi.KoiId" style="color:white">Edit</a>
            </button>
            <button type="button" class="btn btn-secondary">
                <a asp-page="./Index" style="color:white">Back to List</a>
            </button>
        </div>
    </div>
</div>

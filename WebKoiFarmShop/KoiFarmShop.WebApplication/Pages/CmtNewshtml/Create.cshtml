@page
@model KoiFarmShop.WebApplication.Pages.CmtNewshtml.CreateModel


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Create CCommentNews</h4>
    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Create</h5>
                    <small class="text-muted float-end">Default label</small>
                </div>
                <div class="card-body">

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="CommentNews.NewsId" class="control-label"></label>
                            <select asp-for="CommentNews.NewsId" class="form-control" asp-items="ViewBag.NewsId"></select>

                        </div>
                        <div class="mb-3">
                            <label asp-for="CommentNews.Content" class="control-label"></label>
                            <input asp-for="CommentNews.Content" class="form-control" />
                            <span asp-validation-for="CommentNews.Content" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CommentNews.CreatedBy" class="control-label"></label>
                            <select asp-for="CommentNews.CreatedBy" class="form-control" asp-items="ViewBag.CreatedBy"></select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CommentNews.UpdateBy" class="control-label"></label>
                            <select asp-for="CommentNews.UpdateBy" class="form-control" asp-items="ViewBag.UpdateBy"></select>
                        </div
                        <div class="mb-3">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                        <div class="mb-3">
                            <button type="button" class="btn btn-secondary"><a asp-page="Index" style="color:white">Back to List</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@page
@model KoiFarmShop.WebApplication.Pages.CmtKoihtml.EditModel

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Edit CommentKoi</h4>

    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Edit</h5>
                </div>
                <div class="card-body">

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CommentKoi.CmtKoiId" />

                        <div class="mb-3">
                            <label asp-for="CommentKoi.KoiId" class="control-label"></label>
                            <select asp-for="CommentKoi.KoiId" class="form-control" asp-items="ViewBag.KoiId"></select>
                            <span asp-validation-for="CommentKoi.KoiId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CommentKoi.Content" class="control-label"></label>
                            <input asp-for="CommentKoi.Content" class="form-control" />
                            <span asp-validation-for="CommentKoi.Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CommentKoi.CreatedBy" class="control-label"></label>
                            <select asp-for="CommentKoi.CreatedBy" class="form-control" asp-items="ViewBag.CreatedBy"></select>
                            <span asp-validation-for="CommentKoi.CreatedBy" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CommentKoi.CreatedDay" class="control-label"></label>
                            <input asp-for="CommentKoi.CreatedDay" class="form-control" type="date" />
                            <span asp-validation-for="CommentKoi.CreatedDay" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CommentKoi.UpdateDay" class="control-label"></label>
                            <input asp-for="CommentKoi.UpdateDay" class="form-control" type="date" />
                            <span asp-validation-for="CommentKoi.UpdateDay" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CommentKoi.UpdateBy" class="control-label"></label>
                            <select asp-for="CommentKoi.UpdateBy" class="form-control" asp-items="ViewBag.UpdateBy"></select>
                            <span asp-validation-for="CommentKoi.UpdateBy" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                        <div class="mb-3">
                            <button type="button" class="btn btn-secondary">
                                <a asp-page="./Index" style="color:white">Back to List</a>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
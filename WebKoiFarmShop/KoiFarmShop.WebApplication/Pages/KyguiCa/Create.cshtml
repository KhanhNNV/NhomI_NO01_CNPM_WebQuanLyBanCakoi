@page
@model KoiFarmShop.WebApplication.Pages.KyguiCa.CreateModel

<style>
    .section-header {
        padding-top: 90px;
    }
</style>

<div class="container">
    <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px; visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
        <h1 class="display-5 mb-3">Ký gửi</h1>
        
    </div>
    <div class="row g-5 justify-content-center">
        
        <div class="col-lg-7 col-md-12 wow fadeInUp" data-wow-delay="0.5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInUp;">
            
            <form method="post">
                <div class="row g-3">

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Booking.Koiname" class="form-control" />
                            <label asp-for="Booking.Koiname"></label>
                            <span asp-validation-for="Booking.Koiname" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Booking.Description" class="form-control" />
                            <label asp-for="Booking.Description"></label>
                            <span asp-validation-for="Booking.Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Booking.Age" class="form-control" />
                            <label asp-for="Booking.Age"></label>
                            <span asp-validation-for="Booking.Age" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Booking.Size" class="form-control" type="number" step="0.1" />
                            <label asp-for="Booking.Size"></label>
                            <span asp-validation-for="Booking.Size" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Booking.Breed" class="form-control" />
                            <label asp-for="Booking.Breed"></label>
                            <span asp-validation-for="Booking.Breed" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <select asp-for="Booking.Gender" class="form-select">
                                <option value="0">Đực</option>
                                <option value="1">Cái</option>
                            </select>
                            <label asp-for="Booking.Gender"></label>
                            <span asp-validation-for="Booking.Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Booking.Origin" class="form-control" />
                            <label asp-for="Booking.Origin"></label>
                            <span asp-validation-for="Booking.Origin" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Booking.Quantity" class="form-control" />
                            <label asp-for="Booking.Quantity"></label>
                            <span asp-validation-for="Booking.Quantity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            
                            <select asp-for="Booking.Type" class="form-select">
                                <option value="0">Chăm sóc</option>
                                <option value="1">Bán</option>
                            </select>
                            <span asp-validation-for="Booking.Type" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input class="form-control" asp-for="Booking.DateSent" type="date" id="html5-date-input" />
                            <label asp-for="Booking.DateSent"></label>
                            <span asp-validation-for="Booking.DateSent" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input class="form-control" asp-for="Booking.DateReceived" type="date" id="html5-date-input" />
                            <label asp-for="Booking.DateReceived"></label>
                            <span asp-validation-for="Booking.DateReceived" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <button class="btn btn-primary rounded-pill py-3 px-5" type="submit">Ký gửi</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
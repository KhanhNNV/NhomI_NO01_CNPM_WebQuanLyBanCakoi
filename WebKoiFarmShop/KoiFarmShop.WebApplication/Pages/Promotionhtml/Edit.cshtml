            </div>
            <div class="form-group">
                <label asp-for="Promotion.DayEnd" class="control-label"></label>
                <input asp-for="Promotion.DayEnd" class="form-control" />
                <span asp-validation-for="Promotion.DayEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Promotion.Percent" class="control-label"></label>
                <input asp-for="Promotion.Percent" class="form-control" />
                <span asp-validation-for="Promotion.Percent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


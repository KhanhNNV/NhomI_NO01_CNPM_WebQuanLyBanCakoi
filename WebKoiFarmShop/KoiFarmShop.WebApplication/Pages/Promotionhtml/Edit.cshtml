<h4>Promotion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Promotion.ProId" />
            <div class="form-group">
                <label asp-for="Promotion.DayStart" class="control-label"></label>
                <input asp-for="Promotion.DayStart" class="form-control" />

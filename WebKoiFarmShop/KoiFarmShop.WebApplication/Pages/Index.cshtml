@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="https://cakoibienhoa.com/public/userfiles/products/ca-koi-kohaku.jpg" alt="Image">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-lg-7">
                                <h1 class="display-2 mb-5 animated slideInDown">Cá Koi Kohaku</h1>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="https://sieuthicakoi.vn/storage/jo/a7/joa7vugszczy7v0932fxogwgw3de_danh-gia-ca-koi-showa-chat-luong-3.webp" alt="Image">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-lg-7">
                                <h1 class="display-2 mb-5 animated slideInDown">Cá Koi Showa</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Trang Trước</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Trang Tiếp</span>
        </button>
    </div>
</div>
<div class="text-center">
    <div class="row g-4">
        @{
            int dem = 0;
        }
        @foreach (var item in Model.KoiCategory)
        {
            dem++;
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                <div class="bg-white text-center h-100 p-4 p-xl-5">
                    <img class="img-fluid mb-4" src="img/icon-1.png" alt="">
                    <h4 class="mb-3">@Html.DisplayFor(modelItem => item.Title)</h4>
                    <p class="mb-4">@Html.DisplayFor(modelItem => item.Description).</p>
                    <a asp-page="/KoiUser/Index" asp-route-koicateId="@dem" class="btn btn-outline-primary border-2 py-2 px-4 rounded-pill">Mua cá</a>
                </div>
            </div>
        }
    </div>
</div>
           
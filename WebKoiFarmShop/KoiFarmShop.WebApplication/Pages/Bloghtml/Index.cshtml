<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].CreatedDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].UpdateDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blog[0].Cate)
            </th>
            <th>

@page
@model KoiFarmShop.WebApplication.Pages.Bloghtml.EditModel



<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Create Blog</h4>
    <!-- Basic Layout -->
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Create</h5>
                </div>
                <div class="card-body">

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Blog.BlogId" />
                        <div class="mb-3">
                            <label asp-for="Blog.CateId" class="control-label"></label>
                            <select asp-for="Blog.CateId" class="form-control" asp-items="ViewBag.CateId"></select>
                            <span asp-validation-for="Blog.CateId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Blog.Content" class="control-label"></label>
                            <input asp-for="Blog.Content" class="form-control" />
                            <span asp-validation-for="Blog.Content" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Blog.Image" class="control-label"></label>
                            <input asp-for="Blog.Image" class="form-control" />
                            <span asp-validation-for="Blog.Image" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Blog.Status" class="control-label"></label>
                            <input asp-for="Blog.Status" class="form-control" />
                            <span asp-validation-for="Blog.Status" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Blog.CreatedBy" class="control-label"></label>
                            <select asp-for="Blog.CreatedBy" class="form-control" asp-items="ViewBag.CreatedBy"></select>
                            <span asp-validation-for="Blog.CreatedBy" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Blog.CreatedDay" class="control-label"></label>
                            <input class="form-control" asp-for="Blog.CreatedDay" type="date" id="html5-date-input" />
                            <span asp-validation-for="Blog.CreatedDay" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Blog.UpdateDay" class="control-label"></label>
                            <input class="form-control" asp-for="Blog.UpdateDay" type="date" id="html5-date-input" />
                            <span asp-validation-for="Blog.UpdateDay" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Blog.UpdateBy" class="control-label"></label>
                            <select asp-for="Blog.UpdateBy" class="form-control" asp-items="ViewBag.UpdateBy"></select>
                            <span asp-validation-for="Blog.UpdateBy" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                        <div class="mb-3">
                            <button type="button" class="btn btn-secondary"><a asp-page="Index" style="color:white">Back to List</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@page "{koicateId:int?}"  
@model KoiFarmShop.WebApplication.Pages.KoiUser.IndexModel

<style>
    .khung {
        margin-top: 90px;
    }
</style>



<div class="khung">
    <div class="row">
        @if (Model.Kois.Any())
        {
            @foreach (var product in Model.Kois)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s" 
                     style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                    <div class="product-item">
                        <div class="position-relative bg-light overflow-hidden">
                            <img class="img-fluid w-100" src="/assets/img/elements/@product.Image" alt="@product.Title">
                        </div>
                        <div class="text-center p-4">
                            <a class="d-block h5 mb-2" href="">@product.Title</a>
                            <span class="text-primary me-1">$@product.Price</span>
                        </div>
                        <div class="d-flex border-top">
                            <small class="w-50 text-center border-end py-2">
                                <a class="text-body" asp-page="./Details" asp-route-id="@product.KoiId">
                                    <i class="fa fa-eye text-primary me-2"></i>Xem Chi Tiết
                                </a>
                            </small>
                            <small class="w-50 text-center py-2">
                                <a class="text-body" 
                                   onclick="location.href='@Url.Page("/UserOrder/Create", new { KoiId = product.KoiId })'">
                                    <i class="fa fa-shopping-bag text-primary me-2"></i>Mua ngay
                                </a>
                            </small>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">Không có sản phẩm nào trong danh mục này.</p>
        }
    </div>
</div>

@page
@model KoiFarmShop.WebApplication.Pages.Newshtml.IndexModel

<p>
    <a asp-page="Create">Tạo tin mới</a>
</p>
<table class="table">
    <tbody>
@foreach (var item in Model.News) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cate.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedByNavigation.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateByNavigation.FullName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.NewId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.NewId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.NewId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="card">
    <h5 class="card-header">TIN MỚI ĐƯỢC ĐĂNG </h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.News[0].Title)</th>
                    <th>@Html.DisplayNameFor(model => model.News[0].Content)</th>
                    <th>@Html.DisplayNameFor(model => model.News[0].CreatedDay)</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model.News)
                {
                <tr>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Html.DisplayFor(modelItem => item.Title)</strong></td>
                        <td> @Html.DisplayFor(modelItem => item.Content)</td>
                    <td>
                        <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                            <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                    title=@Html.DisplayFor(modelItem => item.Image)>
                                <img src="../assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                            </li>
                        </ul>
                    </td>
                    <td><span class="badge bg-label-primary me-1">Active</span></td>
                    <td>
                        <div class="dropdown">

@page
@model KoiFarmShop.WebApplication.Pages.Categoryhtml.DeleteModel
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Delete Category</h4>
    <div class="card mb-4">
        <h5 class="card-header"><strong>Are you sure you want to delete this?</strong></h5>
        <div class="card-body">
            <div class="mb-3 row">
                <label for="html5-text-input" class="col-md-2 col-form-label">@Html.DisplayNameFor(model => model.Category.Title)</label>
                <div class="col-md-10">
                    <p class="form-control" style="margin-bottom:0px">@Html.DisplayFor(model => model.Category.Title)</p>
                </div>
            </div>

            <div class="mb-3 row">
                <form method="post">
                    <input type="hidden" asp-for="Category.CategoryId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <button type="button" class="btn btn-secondary"> <a asp-page="./Index" style="color:white">Back to List</a></button>

                </form>
            </div>
        </div>
    </div>
</div>
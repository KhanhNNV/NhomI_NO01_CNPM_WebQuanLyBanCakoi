

@inject KoiFarmShop.Services.InterfaceService.IIdentityService identityService

<ul class="navbar-nav">
    @if (identityService.IsSignedInCall())
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">
                Xin chào @identityService.GetUserNameCall()!
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Đăng xuất</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark"  asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
    </li>
}
</ul>
